<div style="padding-top:60px;" class="contents"> 
  <div class="container">
    <div id="dg">
      <p id="notice"><%= notice %></p>

      <p>
        <b>Location name:</b>
        <%= @location.location_name %>
      </p>
      <p>
        <b>Address:</b>
        <%= @location.address %>
      </p>

      <p>
        <b>Phone number:</b>
        <%= @location.phone_number %>
      </p>

      <p>
        <b>District:</b>
        <%= @location.district %>
      </p>
      <p>
        <b>City:</b>
        <%= @location.city%>
      </p>
      <p>
        <b>State:</b>
        <%= @location.state%>
      </p>

      <p>
        <b>Postcode:</b>
        <%= @location.postcode %>
      </p>

      <p>
        <b>Country:</b>
        <%= @location.country %>
      </p>

      <p>
        <b>Lat:</b>
        <%= @location.lat %>
      </p>

      <p>
        <b>Lng:</b>
        <%= @location.lng %>
      </p>

      


      <%= link_to 'Edit', edit_location_path(@location) %> |
      <%= link_to 'Back', locations_path %>

    </div>
  </div>
</div>
