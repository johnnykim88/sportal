<div class="contents"> 
  <div style="padding:50px 20px 30px 20px;" class="container">
    <div  id="dg">
      <%= form_for(@location, html: { class: "form-horizontal" }) do |f| %>
        
      <!-- <fieldset> -->
        <div class="row">
          <div class="col-lg-1 col-md-1 col-xs-0"></div>
            <div class="col-lg-5 col-md-5 col-xs-12 pull-right">
              
                <div class="control-group">
                  <%= f.label :location_name,"Location Name", class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :location_name %>
                  </div>
                </div>
                <div class="control-group">
                  <%= f.label :country, "Street Number", class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :country %>
                  </div>
                </div>
                <div class="control-group">
                  <%= f.label :address, "Street Name", class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :address %>
                  </div>
                </div>
                <div class="control-group">
                  <%= f.label :district, "City", class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :district%>
                  </div>
                </div>
                <div class="control-group">
                  <%= f.label :city, "State", class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :city%>
                  </div>
                </div>
                <div class="control-group">
                  <%= f.label :postcode, "Zip Code", class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :postcode %>
                  </div>
                </div>
                <div class="control-group">
                  <%= f.label :phone_number, "Phone", class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :phone_number %>
                  </div>
                </div>
               
                <div class="control-group">
                  <%= f.label :lat, class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :lat  %>
                  </div>
                </div>
                <div class="control-group">
                  <%= f.label :lng, class: "control-label" %>
                  <div class="controls">
                    <%= f.text_field :lng %>
                  </div>
                </div><br/>
                 
                
              
            </div> <!-- END OF FIRST COLUMNS -->
            <div class="col-lg-5 col-md-5 col-xs-12">
              <div id="searchit" class="control-group">
                <%= label_tag :search, "Search For Address" %>
                <%= text_field_tag :location_search, nil, class: "search-query", type: "search" %>
              </div><br/>
              <div id="button" class="control-group">
                  <%= f.submit "Save Location", class: 'btn' %>
                </div><br/>
                <%= render partial: "googlemap" %>
            </div>
            <div class="col-lg-1 col-md-1 col-xs-0"></div>
          <!-- </div> -->
          <!-- </fieldset> -->
          <% end %>
        </div>
          <!-- <div class="row center">
            <div class="col-lg-12">
              <h4>Images</h4>
              <div id="place_images"></div>
            </div>
          </div> -->
        </div>
      </div>
    </div>