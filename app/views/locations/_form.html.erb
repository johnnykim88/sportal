<div class="contents"> 
  <div class="container">
    <div id="dg">
     <h1>New location</h1>
      <%= form_for(@location, html: { class: "form-horizontal" }) do |f| %>

      <fieldset>
        <div class="row centered">
         
          <div class="col-lg-1"></div>
          <div class="col-lg-5">

            <div class="control-group">
              <%= f.label :address, "Address", class: "control-label" %>
              <div class="controls">
                <%= f.text_field :address, class: "col-lg-12" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :location_name, class: "control-label" %>
              <div class="controls">
                <%= f.text_field :location_name, class: "col-lg-12" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :phone_number, class: "control-label" %>
              <div class="controls">
                <%= f.text_field :phone_number, class: "col-lg-12" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :district, class: "control-label" %>
              <div class="controls">
                <%= f.text_field :district, class: "col-lg-12" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :postcode, class: "control-label" %>
              <div class="controls">
                <%= f.text_field :postcode, class: "col-lg-12" %>
              </div>
            </div>
           <!--  <div class="control-group">
              <%#= f.label :city, class: "control-label" %>
              <div class="controls">
                <%#= f.text_field :city, class: "col-lg-12" %>
              </div>
            </div> -->
            <div class="control-group">
              <%= f.label :state, class: "control-label" %>
              <div class="controls">
                <%= f.text_field :state, class: "col-lg-12" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :country, class: "control-label" %>
              <div class="controls">
                <%= f.text_field :country, class: "col-lg-12" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :lat, class: "control-label" %>
              <div class="controls">
                <%= f.text_field :lat, class: "col-lg-12" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :lng, class: "control-label" %>
              <div class="controls">
                <%= f.text_field :lng, class: "col-lg-12" %>
              </div>
            </div>
            <div class="control-group pull-right">
              <%= f.submit "Save Location", class: 'btn' %>
            </div>
          </div>

          <div class="col-lg-5">
            <% if @location.errors.any? %>
              <div class="notice">
                <h3>Errors</h2>
                <ul>
                <% @location.errors.full_messages.each do |msg| %>
                  <li class="error"><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <div class="control-group">
              <%= label_tag :search, "Search For Address" %>
              <%= text_field_tag :location_search, nil, class: "col-lg-12 search-query", type: "search" %>
            </div>
            <%= render partial: "googlemap" %>
          </div>
        </div>
      </fieldset>
      <% end %>
      </div>
       <div class="col-lg-1"></div>
      <div class="row ">
      
        <div class="well col-lg-12">
          <h4>Images</h4>
          <div id="place_images"></div>
        </div>
        
      </div>
    </div>
  </div>
</div>